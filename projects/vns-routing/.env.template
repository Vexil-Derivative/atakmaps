# Copy to .env and adjust per host

# Region name (used for folder naming and service binds)
OSRM_REGION=sample

# Input OSM PBF (relative to repo root or absolute)
OSRM_PBF=data/osm/sample.osm.pbf
# Optional poly/timestamp alongside PBF
OSRM_POLY=data/osm/sample.poly
OSRM_TIMESTAMP=data/osm/sample.timestamp

# Output roots for processed data
OSRM_DATA_ROOT=data/osm
GH_DATA_ROOT=data/osm

# MVUM/USFS inputs (for overlay + weighting)
MVUM_ROADS=projects/mvum/inputs/MVUM_Symbology_-_Motor_Vehicle_Use_Map_Roads.shp
MVUM_TRAILS=projects/mvum/inputs/MVUM_Symbology_-_Motor_Vehicle_Use_Map_Trails.shp

# Ports
OSRM_PORT=5000
GH_FILESERVER_PORT=8081

